<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGame"
        xmlns:viewmodels="clr-namespace:SnakeGame.ViewModels"
        xmlns:views="clr-namespace:SnakeGame.Views"
        mc:Ignorable="d"
        Title="{Binding AppTitle}" Height="600" Width="900">

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0.0" Color="#99ddff" />
                    <GradientStop Offset="0.1" Color="#80d4ff" />
                    <GradientStop Offset="0.9" Color="#66ccff" />
                    <GradientStop Offset="1.0" Color="#b3e6ff" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <ContentControl Content="{Binding Page}"/>
        </Grid>
    </Border>
</Window>
